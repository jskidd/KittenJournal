@model KittenJournal.Models.Feeding

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Feeding</h4>
    <h5>@ViewBag.KittenName</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingWeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndWeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Timestamp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Timestamp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Kittens" asp-action="Details" asp-route-id="@Model.KittenId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
