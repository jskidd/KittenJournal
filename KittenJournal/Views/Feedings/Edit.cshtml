@model KittenJournal.Models.Feeding

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Feeding</h1>
<h4>@ViewBag.KittenName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="KittenId" value="@ViewBag.KittenId" />
            <div class="form-group">
                <label asp-for="StartingWeight" class="control-label"></label>
                <input asp-for="StartingWeight" class="form-control" />
                <span asp-validation-for="StartingWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndWeight" class="control-label"></label>
                <input asp-for="EndWeight" class="form-control" />
                <span asp-validation-for="EndWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timestamp" class="control-label"></label>
                <input asp-for="Timestamp" class="form-control" />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
